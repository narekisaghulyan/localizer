//module: Localizer
//inputs: positions of the microphones & TDOAs
//outputs:the position of the acoustic source <x,y>

module localizer(
   input [9:0] tau1,
   input [9:0] tau2,		 
   input [9:0] tau3,
   output reg [23:0] x,
   output reg [23:0] y
		 
);
   localparam [23:0] x1 = $floor(0.08*(2**16));
   localparam [23:0] y1 = 0.16*(2**16);
   localparam [23:0] x2 = 0.16*(2**16);
   localparam [23:0] y2 = 0.16*(2**16);
   localparam [23:0] x3 = 0.16*(2**16);
   localparam [23:0] y3 = 0;
   localparam [23:0] v  = 340.3*(2**16);

   reg [35:0] 	    A2;
   reg [35:0] 	    A3;
   reg [35:0] 	    B2;
   reg [35:0] 	    B3;
   reg [79:0] 	    C2;
   reg [79:0] 	    C3;

   reg signed [115:0] 	    numx;
   reg signed [115:0] 	    numy;
   reg signed [71:0] 	    denom;
   
   //reg [15:0] 	    xvalue;
   //reg [15:0] 	    yvalue;
   
   //call functian Am with a value of m to setup A ########################################
   function [35:0] A;
      input [1:0]   m;

      begin
	 if(m == 2'b10)      A = 2*x2*tau1 - 2*x1*tau2;
	 else if(m == 2'b11) A = 2*x3*tau1 - 2*x1*tau3;
	 else                A = 0;
      end
   endfunction // if

    //call functian Bm with a value of m to setup B ########################################
   function [35:0] B;
      input [1:0] m;

      begin
	 if(m == 2'b10)      B = 2*y2*tau1 - 2*y1*tau2;
	 else if(m == 2'b11) B = 2*y3*tau1 - 2*y1*tau3;
	 else                B = 0;
      end
   endfunction // if

   //call functian Cm with a value of m to setup C ########################################
   function [79:0] C;
      input [1:0] m;

      begin
	 if(m == 2'b10)      C = (v**2)*tau2*tau1*(tau2 - tau1) + tau2*((x1**2) + (y1**2)) - tau1*((x2**2) + (y2**2));
	 else if(m == 2'b11) C = (v**2)*tau3*tau1*(tau3 - tau1) + tau3*((x1**2) + (y1**2)) - tau1*((x3**2) + (y3**2));
	 else                C = 0;
      end
   endfunction // if
   
      
   assign A2 = A(2'b10);
   assign A3 = A(2'b11);
   assign B2 = B(2'b10);
   assign B3 = B(2'b11);
   assign C2 = C(2'b10);
   assign C3 = C(2'b11);   
   
   assign denom = A2*B3 - A3*B2;  
   assign numx = B2*C3 - B3*C2;
   assign numy = A3*C2 - A2*C3;

   assign x = (numx/(denom*(2**16)))[23:0];
   assign y = (numy/(denom*(2**16)))[23:0];
   
   
   

 
     
	 

   
   
   
   
		 
     		 
